{{!-- {{ember-selectize
    content=_options
    selection=_selection
    optionValuePath='id'
    optionLabelPath=displayField
    sortField=displayField
    add-item="addItem"
    remove-item="removeItem"
    select-item="selectItem"
    update-filter="updateFilter"
    on-blur="onBlur"
    multiple=multiple
    loading=_loading
    highlight=false
    disabled=disabled
    placeholder=placeholder
    hideSelected=true
}} --}}

{{#if multiple}}
  {{#power-select-multiple
    options=_options
    selected=_selection
    onchange=(action (mut _selection))
    disabled=disabled
    placeholder=placeholder
    loadingMessage=_loading
    onblur="onBlur"
    select="selectItem"
    as |item|
  }}
    {{get item displayField}}
  {{/power-select-multiple}}
{{else}}
  {{#power-select
    options=_options
    selected=_selection
    onchange=(action (mut _selection))
    disabled=disabled
    placeholder=placeholder
    loadingMessage=_loading
    onblur="onBlur"
    select="selectItem"
    as |item|
  }}
    {{get item displayField}}
  {{/power-select}}
{{/if}}
