<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <div class="jumbotron">
      {{#if isResetting}}
        <h3 class="">Reset your password</h3>
        <hr class="m-y-1">
        <form {{action "reset" on="submit"}}>
          <div class="form-group">
            <label for="username">Email Address</label>
            {{input id="username" class="form-control" type="email" value=username}}
          </div>
          {{#if errorMessage}} <div class="alert-danger alert m-b-1" role="alert"><strong>Oh Snap!</strong> {{errorMessage}}</div> {{/if}}
          <button type="submit" class="btn btn-primary">Reset</button>
        </form>
      {{else}}
        <h3 class="">Welcome to Radix!</h3>
        <hr class="m-y-1">
        <form {{action "authenticate" on="submit"}}>
          <div class="form-group">
            <label for="username">Email Address</label>
            {{input id="username" class="form-control" type="email" value=username}}
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            {{input id="password" class="form-control" type="password" value=password}}
          </div>
          {{#if errorMessage}} <div class="alert-danger alert m-b-1" role="alert"><strong>Oh Snap!</strong> {{errorMessage}}</div> {{/if}}
          <button type="submit" class="btn btn-primary">Sign In</button>
        </form>
      {{/if}}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <a href="javascript:void(0)" class="btn-link btn" {{action "toggleReset"}}>
        {{#if isResetting}} Log in {{else}} Reset password {{/if}}
      </a>
    </div>
  </div>
</div>
