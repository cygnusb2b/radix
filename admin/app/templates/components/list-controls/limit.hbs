{{#if options.length}}
  {{#list-controls/button
      id="dropdown-display-limit"
      disabled=disabled
      class=(concat "dropdown-toggle btn-block" " " buttonClass)
      data-toggle="dropdown"
      aria-haspopup="true"
      aria-expanded="false"
    }}
      <span class="mr-1 d-none d-md-inline d-lg-none d-xl-inline">Limit:</span>
      <span class="d-inline">{{label}}</span> {{limit}}
    {{/list-controls/button}}

  <div class="dropdown-menu {{alignmentClass}}" aria-labelledby="dropdown-display-limit">
    {{#each filteredOptions as |option|}}
      <a class="dropdown-item" href="javascript:void(0)" {{action "setLimit" option}}>{{option}}</a>
    {{/each}}
  </div>
{{/if}}
