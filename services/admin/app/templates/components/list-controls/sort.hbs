{{#if options.length}}
  <div class="btn-group btn-block {{directionClass}}" role="group">
    {{#list-controls/button
      id="dropdown-sort-type"
      disabled=disabled
      class=(concat "dropdown-toggle btn-block" " " buttonClass)
      data-toggle="dropdown"
      aria-haspopup="true"
      aria-expanded="false"
    }}

      {{entypo-icon "list" class="mr-1 d-inline d-md-none d-lg-inline d-xl-none"}}
      <span class="d-none d-md-inline d-lg-none d-xl-inline">{{selected.label}}</span>
    {{/list-controls/button}}

    <div class="dropdown-menu {{alignmentClass}}" aria-labelledby="dropdown-sort-type">
      {{#each filteredOptions as |option|}}
        <a class="dropdown-item" href="javascript:void(0)" {{action "sortBy" option.key}}>{{option.label}}</a>
      {{else}}
      <span class="dropdown-item disabled">No other sort methods available.</span>
      {{/each}}
    </div>
  </div>
  {{#list-controls/button class=buttonClass disabled=disabled click=(action "toggleAscending")}}
    {{entypo-icon (if ascending "arrow-up" "arrow-down")}}
  {{/list-controls/button}}
{{/if}}
