<table class="table table-sm">
  <caption>Users and roles assigned to this application</caption>
  <thead>
    <tr>
      <th>User</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each items as |item|}}
      {{application-user model=item cancelNew="cancelNew" onUpdate="refresh"}}
    {{else}}
      <tr>
        <td colspan="3" class="text-muted text-center">No users have been assigned to this application.</td>
      </tr>
    {{/each}}

    <tr>
      <td colspan="3">
        <button class="btn btn-success btn-block" {{action "create"}}>
          {{entypo-icon "plus"}}
          Add user to this application
        </button>
      </td>
    </tr>
  </tbody>
</table>
