<div class="form-group">
    <label for="field-demographic-answer-type">Type</label>
    {{edit-field/select/choice-types value=model.questionType}}
    <small class="form-text text-muted">The type of answer this question supports.</small>
</div>

{{#if (eq model.questionType 'choice-single')}}
    {{ partial 'demographic/questions/options/-choice-options' }}
{{/if}}
{{#if (eq model.questionType 'choice-multiple')}}
    {{ partial 'demographic/questions/options/-choice-options' }}
{{/if}}
{{#if (eq model.questionType 'related-choice-single')}}
    {{ partial 'demographic/questions/options/-related-choice-options' }}
{{/if}}
{{#if (eq model.questionType 'string')}}
    {{ partial 'demographic/questions/options/-string-options' }}
{{/if}}
{{#if (eq model.questionType 'textarea')}}
    {{ partial 'demographic/questions/options/-string-options' }}
{{/if}}
