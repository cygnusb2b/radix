{{-bootstrap/form/input-group
    key='name'
    value=model.name
    helpText='A friendly name for these service settings.'
    hideLabel=true
    required=true
}}

{{-bootstrap/form/input-group
    key='clientKey'
    value=model.clientKey
    helpText='The Omeda Client ID (ex: client_foo).'
    hideLabel=true
    required=true
}}

{{-bootstrap/form/input-group
    key='brandKey'
    value=model.brandKey
    helpText='The Omeda brand abbreviation/identifier (ex: somedb).'
    hideLabel=true
    required=true
}}

{{-bootstrap/form/input-group
    key='appId'
    value=model.appId
    helpText='The Omeda API Application ID.'
    hideLabel=true
    required=true
}}

{{-bootstrap/form/input-group
    key='inputId'
    value=model.inputId
    helpText='The Omeda API Input ID.'
    hideLabel=true
    required=true
}}

{{-bootstrap/form/input-group
    key='accountBehaviorId'
    value=model.accountBehaviorId
    helpText='The Omeda BehaviorID to use to signify an identity account (leaving empty will disable this feature).'
    hideLabel=true
    required=true
}}

{{-bootstrap/form/input-group
    key='identityBehaviorId'
    value=model.identityBehaviorId
    helpText='The Omeda BehaviorID to use to signify an internal/external identity (leaving empty will disable this feature).'
    hideLabel=true
    required=true
}}

